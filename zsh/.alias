function gcalendar() {
	if [ "$#" -eq 0 ]; 	then 
		gcalcli agenda
	else 
		gcalcli $@
	fi
}

alias gcal="gcalendar"
alias gcalw="gcalcli calw --military --monday --noweekend -w 20"

